<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.smhrd.mapper.BoardMapper">
    
    <select id="BoardList" resultType="kr.smhrd.model.BoardVO">
        select * from board
    </select>
    
    <!-- 회원가입 -->
    <insert id="BoardSign" parameterType="kr.smhrd.model.MemberVO">
		insert into memberinfo(userid, userpw, nickname, email) values(#{userid}, #{userpw}, #{nickname}, #{email})    
	</insert>
    
    <select id="boardContent" resultType="kr.smhrd.model.BoardVO">
        select * from board where idx = #{idx}
    </select>
    
	<update id="boardUpdate" parameterType="kr.smhrd.model.BoardVO">
	    	update board set writer = #{writer}, title = #{title}, contents = #{contents} where idx = #{idx}
	</update>
    
	<!-- 나무 입력받아서 불러오는 기능 -->
	<insert id="treeInsert" parameterType="kr.smhrd.model.TreeVO">
	    insert into tree_info(userid, treename, treelevel, exp) 
	    values (#{userid}, #{treename}, #{treelevel}, #{exp})
	</insert>
	
	<!-- !!고쳐야함!! -->
	<select id="TreeList" resultType="kr.smhrd.model.TreeVO">
	    select * from tree_info where userid=#{userid}
	</select>
	
	<select id="MemberList" resultType="kr.smhrd.model.MemberVO">
	    select * from memberinfo where userid=#{userid}
	</select>
	
</mapper>
